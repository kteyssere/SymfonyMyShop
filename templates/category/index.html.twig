{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Toutes les categories</h1>

    <div class="table-responsive container ">
    <table class="table table-dark table-sm w-auto table-hover table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('category_show', {'id': category.id}) }}" class="btn btn-secondary btn-lg" tabindex="-1" role="button" aria-disabled="true">show</a>
                    <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-secondary btn-lg" tabindex="-1" role="button" aria-disabled="true">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

    <div style="text-align: center;margin-top: 5px;">
    <a href="{{ path('category_new') }}" class="btn btn-secondary btn-lg" tabindex="-1" role="button" aria-disabled="true">Create new</a>
    </div>

{% endblock %}
