        <a href="{{ path('user_index')}}" class="btn btn-secondary btn-lg" tabindex="-1" role="button" aria-disabled="true">Tout les user</a>
        <a href="{{ path('category_index')}}" class="btn btn-secondary btn-lg" tabindex="-1" role="button" aria-disabled="true">Toutes les categories</a>
    </div>
