{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{# ... #}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post">
        <label for="username">Email:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}"/>

        <label for="password">Password:</label>
        <input type="password" id="password" name="_password"/>

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}

        <button style="margin-left: 5px" type="submit" class="btn btn-secondary btn-lg" tabindex="-1" role="button" aria-disabled="true">Se connecter</button>
    </form>

    <p>Pas encore inscrit ?</p>
    <a href="{{ path('user_new') }}" class="btn btn-secondary btn-lg" tabindex="-1" role="button" aria-disabled="true">S'inscrire</a>
{% endblock %}