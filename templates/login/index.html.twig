{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1>Connexion</h1>

    <div class="d-flex justify-content-center">
        <form class="row gy-2 gx-3 align-items-center" action="{{ path('login') }}" method="post">
            <div class="mb-3">
                <label for="username" class="form-label">Email</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control"/>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Mot de passe</label>
                <input type="password" id="password" name="_password" class="form-control"/>
                <p class="mt-3"><a href="#" aria-disabled="true">Mot de passe oubli√© ?</a></p>
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-secondary btn-lg" tabindex="-1" role="button" aria-disabled="true">Se connecter</button>
            </div>
        </form>
    </div>

    <div class="d-flex justify-content-center">
        <p class="mt-3">Pas encore inscrit ? <a href="{{ path('user_new') }}" aria-disabled="true">S'inscrire</a></p>
    </div>

   
{% endblock %}