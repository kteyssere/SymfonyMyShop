        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
{#            {{ encore_entry_link_tags('app') }}#}
{#            <link rel="stylesheet" href="base.css">#}
            {# the CSS file lives at "public/css/blog.css" #}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
            <link href="{{ asset('css/style.css') }}" rel="stylesheet"/>

        {% endblock %}

{#        <link rel="stylesheet" href="../base.css">#}
        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>

    {% block menu %}

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarText">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('homepage') }}">Acceuil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('category_show', {id: 1}) }}">Colliers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('category_show', {id: 2}) }}">Boucles d'oreilles</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('category_show', {id: 3}) }}">Bagues</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('category_show', {id: 4}) }}">Bracelets</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('product_index') }}">Tout nos produits</a>
                        </li>
                    </ul>
                    {% if is_granted('ROLE_USER') %}
                    <span class="navbar-text">
                        <a class="nav-link" href="{{ path('user_show', {id: app.user.id}) }}">
                            <img src="{{ asset('whiteaccount.png') }}" alt="bag" class="img-bag"/>
                        </a>
                    </span>
                    <span class="navbar-text" style="padding-top: 20px">
                    <a class="btn btn-sm btn-outline-secondary" href="{{ path('logout') }}" role="button">Déconnexion</a>
                    </span>
                        
                    {% else %}

                    <a class="btn btn-outline-primary me-2" href="{{ path('login') }}" role="button">Connexion</a>
                    <a class="btn btn-sm btn-outline-secondary" href="{{ path('user_new') }}" role="button">Inscription</a>
                   
                    {% endif %}

                    <span class="navbar-text">
                        <a class="nav-link" href="{{ path('shopping_cart_index') }}">
                             <span class="position-absolute top-5 start-90 translate-middle badge rounded-pill bg-danger">
                            {{ render(controller('App\\Controller\\ShoppingCartController::getTotalProd')) }}
                            </span>
                            <img src="{{ asset('whitebag.png') }}" alt="bag" class="img-bag"/>

                        </a>

                    </span>
                </div>
            </div>
        </nav>
    {% endblock %}
    
    {% block body %}{% endblock %}
    </body>
</html>
